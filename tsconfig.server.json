{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs", // Essential for Node.js backend code
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // Output directory for compiled server code
    "rootDir": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es2020"],
    "sourceMap": true,
    "baseUrl": "." // Allows absolute paths from the root
  },
  "include": [
    "server.ts", 
    "prisma.ts", 
    "types.ts", 
    "src/lib/**/*",
    "src/app/api/**/*"
  ],
  "exclude": ["node_modules", "src/app"]
}